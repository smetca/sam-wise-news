{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "article_id": 1,
          "votes": 20,
          "body": "Text from the article..",
          "created_at": 1527695953341,
          "comment_count": 100
        }
      ]
    }
  },
  "POST /api/articles": {
    "description": "Adds an article to the database, and returns that article",
    "queries": [],
    "exampleSent": {
      "author": "weegembump",
      "title": "New Lake Monster",
      "body": "Article text",
      "topic": "animals"
    },
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "New Lake Monster",
        "article_id": "14",
        "body": "Article text",
        "topic": "animals",
        "created_at": 1527699983341,
        "votes": 0
      }
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves a specific article",
    "queries": [],
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "New Penguin Found",
        "article_id": 3,
        "body": "lorem ipsum dolor",
        "topic": "animals",
        "created_at": 1527696983341,
        "votes": 11,
        "comment_count": 50
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates votes on a specific article",
    "queries": [],
    "exampleSent": {
      "inc_votes": 30
    },
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "New Penguin Found",
        "article_id": 3,
        "body": "lorem ipsum dolor",
        "topic": "animals",
        "created_at": 1527696983341,
        "votes": 41,
        "comment_count": 50
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments from a specific article",
    "queries": ["sortBy", "orderBy"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 12,
          "votes": 40,
          "created_at": 1527699983341,
          "author": "lurker",
          "body": "lorem ipsum dolor"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a new comment to a specific article",
    "queries": [],
    "exampleSent": {
      "username": "lurker",
      "body": "lorem ipsum dolor"
    },
    "exampleResponse": {
      "comment_id": 13,
      "votes": 0,
      "created_at": 1527709983341,
      "author": "lurker",
      "body": "lorem ipsum dolor"
    }
  },
  "PATCH /api/comments/:comment_id": {
    "description": "updates votes on a specific comment",
    "queries": [],
    "exampleSent": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "comment_id": 13,
      "votes": 1,
      "created_at": 1527709983341,
      "author": "lurker",
      "body": "lorem ipsum dolor"
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes specific comment",
